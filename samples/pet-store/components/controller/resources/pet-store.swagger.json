{
  "swagger": "2.0",
  "info": {
    "description": "Cellery sample server Petstore server.",
    "version": "1.0.0",
    "title": "Swagger Petstore",
    "license": {
      "name": "Apache 2.0"
    }
  },
  "host": "petstore.cellery.io",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/catalog": {
      "get": {
        "tags": [
          "catalog"
        ],
        "summary": "View all pet accessories in the store",
        "description": "",
        "operationId": "getCatalog",
        "responses": {
          "200": {
            "description": "Details of pet accessories",
            "schema": {
              "$ref": "#/definitions/Catalog"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/catalog/{product_id}": {
      "get": {
        "tags": [
          "catalog"
        ],
        "summary": "View all pet accessories in the store",
        "description": "",
        "operationId": "getProduct",
        "parameters": [
          {
            "name": "product_id",
            "in": "path",
            "description": "ID of product to return",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Details of pet accessory",
            "schema": {
              "$ref": "#/definitions/Catalog"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/customers": {
      "get": {
        "tags": [
          "customers"
        ],
        "summary": "View all customers",
        "description": "",
        "operationId": "getCustomers",
        "responses": {
          "200": {
            "description": "Details of customers",
            "schema": {
              "$ref": "#/definitions/Customer"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/customers/{customer_id}": {
      "get": {
        "tags": [
          "customers"
        ],
        "summary": "View all customers",
        "description": "",
        "operationId": "getCustomer",
        "parameters": [
          {
            "name": "customer_id",
            "in": "path",
            "description": "ID of customer to return",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Details of customer",
            "schema": {
              "$ref": "#/definitions/Customer"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/orders": {
      "get": {
        "tags": [
          "orders"
        ],
        "summary": "View all orders",
        "description": "",
        "operationId": "getOrders",
        "responses": {
          "200": {
            "description": "Details of orders",
            "schema": {
              "$ref": "#/definitions/Order"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/orders/{order_id}": {
      "get": {
        "tags": [
          "orders"
        ],
        "summary": "View all orders",
        "description": "",
        "operationId": "getOrder",
        "parameters": [
          {
            "name": "order_id",
            "in": "path",
            "description": "ID of customer to return",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Details of order",
            "schema": {
              "$ref": "#/definitions/Order"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/orders/customer/{customer_id}": {
      "get": {
        "tags": [
          "orders"
        ],
        "summary": "View all orders of a specific customer",
        "description": "",
        "operationId": "getOrderByCustomer",
        "parameters": [
          {
            "name": "customer_id",
            "in": "path",
            "description": "ID of customer to search orders for",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Details of order of the selected customer",
            "schema": {
              "$ref": "#/definitions/Order"
            }
          },
          "default": {
            "description": "unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Catalog": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64",
          "example": 1
        },
        "item": {
          "type": "string",
          "example": "Leather chain"
        },
        "descripion": {
          "type": "string",
          "example": "premium brown doggie chain"
        },
        "unitPrice": {
          "type": "string",
          "example": "$15.90"
        },
        "inStock": {
          "type": "integer",
          "format": "int64",
          "example": 200
        }
      }
    },
    "Customer": {
      "type": "object",
      "properties": {
        "customer_id": {
          "type": "string",
          "example": "001"
        },
        "firstname": {
          "type": "string",
          "example": "John"
        },
        "lastname": {
          "type": "string",
          "example": "Doe"
        },
        "age": {
          "type": "integer",
          "format": "int64",
          "example": 40
        }
      }
    },
    "Order": {
      "type": "object",
      "properties": {
        "order_id": {
          "type": "string",
          "example": "001"
        },
        "customer_id": {
          "type": "string",
          "example": "001"
        },
        "item": {
          "type": "array",
          "items": {
            "type": "integer",
            "format": "int64",
            "example": "1,2"
          }
        },
        "price": {
          "type": "string",
          "example": "$35.99"
        },
        "delivery_date": {
          "type": "number",
          "example": "10-03-2019"
        },
        "delivery_address": {
          "type": "string",
          "example": "No. 20. Palm Grove"
        }
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        }
      }
    }
  }
}

